@{
    ViewBag.Title = "Home Page";
}
@using System.Security.Claims;

<div class="jumbotron">
    <h1>ASP.NET with Auth0 Lock</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    
    @if (User.Identity.IsAuthenticated)
    {
        <p>Welcome, @ViewBag.Name!</p>
        <p><a href="/Account/Logout" class="btn btn-primary btn-lg">Logout</a></p>
    }
    else
    {
        <p>@Html.ActionLink("Login with Auth0", "Login", "Account", null, new { @class = "btn btn-primary btn-lg" })</p>
    }
</div>
